{
  "editor.fontFamily": "'cascadia code','Fira Code','Operator Mono', 'Consolas', 'Courier New'",
  "editor.fontLigatures": true,
  "editor.mouseWheelZoom": true,
  "emmet.includeLanguages": {
    "django-html": "html",
    "javascript": "javascriptreact"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook",
    "*.dll": "default"
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "code-runner.runInTerminal": true,
  "code-runner.saveFileBeforeRun": true,
  "explorer.confirmDelete": false,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  // config related to code formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  // "[javascript]": {
  //   "editor.formatOnSave": false,
  //   "editor.defaultFormatter": null
  // },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },
  "eslint.alwaysShowStatus": true,

  "eslint.workingDirectories": ["./client", "./server"],
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace"
  },
  "workbench.editor.enablePreview": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Windows PowerShell": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    }
  },
  "files.associations": {
    "*.js": "javascript"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "gitlens.defaultDateFormat": null,
  "git.suggestSmartCommit": false,
  "bracketPairColorizer.depreciation-notice": false,

  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "underline",
  "workbench.sideBar.location": "right",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "liveServer.settings.donotVerifyTags": true,
  "git.confirmSync": false,
  "workbench.startupEditor": "none",
  "editor.linkedEditing": true,
  "git.autofetch": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "terminal.integrated.fontFamily": "'cascadia code'",
  "vsicons.dontShowNewVersionMessage": true,
  "workbench.iconTheme": "developer-icon-theme",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.editor.untitled.hint": "hidden",
  "emmet.syntaxProfiles": {},
  "rapidapi.terminalLink.enabled": false,
  "workbench.colorTheme": "Learn with Sumit - Professional"
}
